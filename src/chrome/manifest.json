{
  "name": "Censor Tracker",
  "version": "2",
  "description": "Censor Tracker",
  "permissions": [
    "tabs",
    "proxy",
    "storage",
    "activeTab",
    "webRequest",
    "contextMenus",
    "notifications",
    "unlimitedStorage",
    "webRequestBlocking",
    "https://reestr.rublacklist.net/api/v3/domains/json",
    "https://reestr.rublacklist.net/api/v3/ori/refused/json",
    "<all_urls>",
    "http://*/*",
    "https://*/*",
    "*://*/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Censor Tracker",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "32": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "manifest_version": 2
}
