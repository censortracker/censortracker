{
  "version": "6.0.0.0",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/icons/128x128/default.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "91.1.0"
    }
  },
  "content_security_policy": "script-src 'self'; object-src 'self';",
  "manifest_version": 2,
  "permissions": [
    "<all_urls>",
    "webRequest",
    "alarms",
    "activeTab",
    "management",
    "notifications",
    "proxy",
    "storage",
    "tabs",
    "unlimitedStorage"
  ]
}
